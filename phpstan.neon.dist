# phpstan.neon.dist

parameters:
    # Maximum strictness
    level: max

    # Directories to analyse
    paths:
        - src
        - spec

    # Ignore unavoidable errors
    ignoreErrors:
        - '#Instantiated class ProjectServiceContainer not found#'

    # Disable Symfony container analysis (you don't have one)
    symfony:
        container_xml_path: null

    # Exclude folders that shouldnâ€™t be analysed
    excludePaths:
        - %currentWorkingDirectory%/var
        - %currentWorkingDirectory%/vendor
